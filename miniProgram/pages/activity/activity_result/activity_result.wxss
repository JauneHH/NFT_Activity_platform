/* pages/user_information/activity_result/activity_result.wxss */
page{
  background: #F6F7F8;
}
.Container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  }
  .activtyBox{
    margin: 20rpx;
    width: 95%;
    height: 350rpx;
    display: flex;
    border-radius: 20rpx;
    background: white;
  }
  
  .activtyImage{
    width: auto;
    height: auto;
    margin: 20rpx;
    border-radius: 15rpx;
  }
  
  .activtyInformationList{
  
    display: flex;
    flex-direction: column;
    margin: 20rpx;
    width: auto;
    height: auto;
  
  }
.portrait{
  
  width: 50px;
  height: 50px;
  border: 5rpx solid #fff;
  border-radius: 50%;
  float: right; 
  margin: 10px;
}

.mediaBox{
  margin:20rpx;
  padding: 10rpx;
  width: 95%;
  height: auto;
  display:block;
  border: 1px black;
  border-radius: 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.picBox{
  display: flex;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  justify-content: space-between;
}
.picBox:after {
  content: "";
  width: 100px;
}
.pic{
  width: 25%;
  margin:10px;
  border: 1px black;
}
.commentBox{
  margin: 10px;
  display: flex;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  justify-content: space-between;
}