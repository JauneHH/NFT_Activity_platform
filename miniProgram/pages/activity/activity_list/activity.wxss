page {
  background: white;
}

.search{
  width: 100%;
  height: 30px;
  margin: 10px;
}
/*总体主盒子*/

.Container {
  display: flex;
  flex-direction: row;
}

/*左侧栏主盒子*/

.nav_left {
  /*设置行内块级元素（没使用定位）*/
  
  display: inline-block;
  width: 25%;
  height: 800px;
  /*主盒子设置背景色为灰色*/
  background: #F5F5F5;
  text-align: center;
  overflow: scroll;
  
  overflow-y: scroll;
}

/*左侧栏list的item*/

.nav_left .nav_left_items {
  /*每个高30px*/
  height: 50px;
  /*垂直居中*/
  line-height: 30px;
  /*再设上下padding增加高度，总高42px*/
  border-bottom: 1px solid #dedede;
  /*文字14px*/
  font-size: 16px;
  display: flex;
  padding: 10rpx;
  align-items: center;
  text-align: center;
  color:#B5B5B5;
}

/*左侧栏list的item被选中时*/

.nav_left .nav_left_items.active {
  /*背景色变成白色*/
  background: #fff;
  color:black;
  
}

/*右侧栏主盒子*/

.nav_right {
  /*右侧盒子使用了绝对定位*/

  /*宽度75%，高度占满，并使用百分比布局*/
  
  width: 60%;
  height: 100%;
  background: #fff;
  overflow: scroll;
  display: block;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content:space-between;
}
 .nav_right text {
  /*给text设成块级元素*/
  display: block;
  font-size: 20px;
  /*设置文字居中*/
  text-align: left;
  /*设置文字溢出部分为...*/
  overflow: hidden;

  white-space: nowrap;
  text-overflow: ellipsis;
}
.nav_right_items {
  margin: 20px;
  width: 100%;
  height:auto;
  display: flex;
  align-items: center;
  
}
