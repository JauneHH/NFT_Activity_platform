.submitBox{
  z-index: 99;
  align-items: center;
  justify-content: center;
  position: fixed;
  display: flex;
  bottom: 0%;
  width: 100%;
  height: 100rpx;
  opacity: 100;
  background:  #F6F7F8;
}
.picBox{
  display: flex;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  justify-content: space-between;
}
.picBox:after {
  content: "";
  width: 100px;
}
.picSelect{
  width: 100px;
  height: 100px;
  margin:10px;
  
}
.pic{
  width: 25%;
  height: 100px;
  margin:10px;
  border: 1px black;
}


