/* pages/activity_information/activity_information.wxss */

.Container{
  width:100%;
  height: 100%;
  background:  #F5F5F5
}
.acitivityHead{
  padding-bottom:10px;
  height: 150px;
  width: auto;
  display: flex;
  
}
.activityLogo{
height: 120px;
float:left;
border-radius: 15rpx;
margin-left:20px;
width: 100px;
background:grey;
}
.item{
height: 20px;
margin:5px;
margin-left:10px;
margin-bottom: 10px;
}
.item_collect{
  margin-top:35px;
  margin-left: 10px;
  height: 35px;
  width: 200px;
  border-radius:20px ;
  border:2rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
}

.activityState{
height: 20px;
margin-left:5px;
color:red;
}

.activityInformation{
  background:#fff;
  border-radius: 20px 20px 0 0;
  padding: 10px ;
 
  height: 100%;
  width: auto;
  margin-bottom: 50px;
}
.activityStatus{
  position: relative;
  height: 60px;
  width: auto;
  margin:5px;
  display: flex;
  font: medium;
}
.activityLocation{
  position: relative;
  background:white;
  height: 50px;
  width: auto;
  margin:10px;
  display: flex;
  vertical-align: middle;
  justify-content: space-between;
  border:5rpx solid #8C8A8A;
  border-radius: 50rpx;
  font: medium;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.activityAttendance{
  position: relative;
  height: 200px;
  width: auto;
  margin:10px;
  
}

.activityRemark{
  position: relative;
  height: auto;
  width: auto;
  margin:10px;
  display: flex;
  flex-direction: column;
}

.activityFooter{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-between;
  bottom:0;
  height: 50px;
  background:white;
  width: 100%;
  bottom: 0%;
  
}
.market_container{
margin: 10rpx;

}
.market_item{
  margin: 20rpx;
  bottom: 10rpx;
  display: flex;
  justify-content: space-between;

}
.market_icon{

  background: linear-gradient(to bottom left, #ffdab9 ,#fff);
  color: #ff8c00;
  width: 60rpx;
  height: 60rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  float: right; 
  margin: 10rpx;
  margin-right: 30rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:clip;
  font-size:20px;
  text-align: center;
}